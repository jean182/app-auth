.d-flex.justify-content-center.align-items-center
  = render "devise/shared/error_messages", resource: resource
.row.justify-content-center.align-items-center.mt-2.p-3
  .col-sm-4.col-sm-offset-4.bg-dark.rounded.p-3
    %h2.text-white.display-4 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .form-group
        = f.label :name, class: "text-white"

        = f.text_field :name, autofocus: true, class: "form-control", placeholder: "John Doe"
      .form-group
        = f.label :email, class: "text-white"

        = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "john@email.com"
      .form-group
        = f.label :password, class: "text-white"
        - if @minimum_password_length
          %em.text-white
            (#{@minimum_password_length} characters minimum)

        = f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "************"
      .form-group
        = f.label :password_confirmation, class: "text-white"

        = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "************"
      = f.submit "Sign up", class: "btn btn-info btn-block"
    = render "devise/shared/links"
