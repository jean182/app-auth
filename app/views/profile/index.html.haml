.row.justify-content-center.align-items-center.mt-2
  .col-sm-6
    .card
      .card-body
        .row
          .col-12.col-lg-8.col-md-6
            %h3.mb-0.text-truncated
              = current_user.name
            %p.lead
              Role:
              %strong
                = current_user.role.humanize
            %p
              = current_user.description
          .col-12.col-lg-4.col-md-6.text-center
            %img.mx-auto.rounded-circle.img-fluid{alt: "", src: current_user.image, height: "50", width: "50"}/
